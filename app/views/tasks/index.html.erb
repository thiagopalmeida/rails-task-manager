<div class="container">
  <h1>My tasks</h1>
  <% @tasks.each do |task| %>
  <%= link_to "Delete",delete_task_path(task),method: :delete, data: { confirm: "Are you sure?"  } %>
  <input type="checkbox" name="check" value= <%= 2 if task.completed == true %> checked><%= link_to task.title, task_path(task) %><br>
  <% end %>
  <%= link_to '+Add a new task' , new_path %>
</div>

